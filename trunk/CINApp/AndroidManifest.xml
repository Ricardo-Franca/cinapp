<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cinapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
    
    
    <activity android:name="br.com.cinapp.activity.ActivityMain" android:label="@string/app_name"> 
      <intent-filter> 
           <action android:name="android.intent.action.MAIN"/> 
           <category android:name="android.intent.category.LAUNCHER"/> 
      </intent-filter> 
	</activity>
	
    <activity
        android:name="br.com.cinapp.activity.DisplayMessageActivity" 
        android:label="@string/title_activity_display_message"
        android:parentActivityName="br.com.cinapp.activity.ActivityMain">
      <meta-data 
           android:name="android.support.PARENT_ACTIVITY"
           android:value="br.com.cinapp.activity.MainActivity"> 
      </meta-data> 
	</activity>

    </application>
</manifest>
